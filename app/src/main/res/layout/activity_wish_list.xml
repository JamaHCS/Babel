<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WishList">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:background="#4C4949"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/babellogo"
                android:padding="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="#E4E1E1">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WISHLIST"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:paddingTop="15dp"
                    android:paddingHorizontal="15dp"/>

            <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:paddingHorizontal="15dp">

                <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Producto"
                        android:layout_weight="6"/>

                <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Cantidad"
                        android:layout_weight="3"/>

                <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Talla"
                        android:layout_weight="3"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:paddingHorizontal="15dp">

                <ImageView
                        android:padding="5dp"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shirt4"
                        android:layout_weight="4"/>

                <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Tee-shirt $350"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_weight="3"/>

                <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Media"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_weight="3"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="12"
                android:layout_marginHorizontal="15dp"
                android:background="#FFEB3B"
                android:gravity="center">

            <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:layout_weight="6"/>

            <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="$"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_weight="3"/>

            <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="15dp">

            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PROCEDER A PAGAR"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#FFEB3B"/>

            <Button
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VACIAR CARRITO"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#151515"/>

            <Button
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTINUA COMPRANDO"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#151515"
                    android:onClick="btnContinuar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>