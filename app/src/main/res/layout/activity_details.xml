<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:background="#4C4949"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/babellogo"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Detalles del producto"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="12"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bobsponja"
                android:padding="3dp"
                android:layout_weight="6"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BABEL | TEE-SHIRT    $350"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TALLAS DISPONIBLES:"
                    android:textSize="14dp"/>

                <Spinner
                    android:id="@+id/sizes_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: "
                        android:textSize="14dp"
                        android:layout_weight="6"/>

                    <EditText
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:hint="Cantidad*"
                        android:layout_weight="6"
                        android:textSize="14dp"/>

                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <Button
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="AGREGAR AL CARRITO"
                        android:textSize="7dp"
                        android:background="#FFEB3B"
                        android:textStyle="bold"
                        android:onClick="btnCarrito"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playera bien bonita de la marca"
                    android:textSize="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:text="Estado: "
                        android:layout_weight="3"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="Disponible"
                        android:textColor="#FFEB3B"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Material: Algodón"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoría: Babel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creado el: 12 Aug 2020"
                    android:textSize="10sp"/>

                <Button
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PAGO"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/arrow"
                    android:textStyle="bold"
                    android:onClick="btnPago"/>

                <ImageView
                    android:id="@+id/card_img"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/cards"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/pago_tv"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:textAlignment="gravity"/>

                <Button
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENVÍOS"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/arrow"
                    android:textStyle="bold"
                    android:onClick="btnEnvio"/>

                <TextView
                    android:id="@+id/envio_tv"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>